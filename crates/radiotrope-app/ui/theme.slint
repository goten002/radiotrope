// Theme colors â€” reactive dark/light mode

export global Theme {
    in-out property <bool> dark-mode: true;

    out property <color> panel: dark-mode ? #25272a : #d4d5da;
    out property <color> surface: dark-mode ? #191a1c : #f5f5f5;
    out property <color> accent: #f7931e;
    out property <color> accent-hover: #e5850f;
    out property <color> accent-text: #f7931e;
    out property <color> text-primary: dark-mode ? #ffffff : #1a1a1a;
    out property <color> text-secondary: dark-mode ? #a0a0a0 : #666666;

    // Button colors
    out property <color> button-text: #1a1a1a;  // dark text on accent buttons (both themes)
    out property <color> disabled-bg: dark-mode ? #555555 : #cccccc;
    out property <color> disabled-text: dark-mode ? #888888 : #999999;

    // Menu / popup colors
    out property <color> popup-bg: dark-mode ? #2b2d31 : #ffffff;
    out property <color> menu-hover: dark-mode ? #3a3d42 : #c0c1c6;
    out property <color> menu-bar-hover: dark-mode ? #2f3136 : #d0d1d6;
    out property <color> menu-text: dark-mode ? #c8c8c8 : #444444;

}
